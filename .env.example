# Telegram bot token from @BotFather
BOT_TOKEN=your_bot_token_here

# OpenAI API key for Whisper transcription
OPENAI_API_KEY=sk-your_key_here

# Bot mode: "auto" — transcribe all voice/video_note messages
#            "mention" — only when the bot is mentioned or replied to
BOT_MODE=mention

# Max seconds of audio per chat per day (default: 3600 = 1 hour)
# DAILY_LIMIT_SECONDS=3600

# Optional: where to store /summary message history JSON
# MESSAGE_HISTORY_FILE_PATH=./data/message-history.json

# Optional: where to store /summary user usage JSON
# SUMMARY_USAGE_FILE_PATH=./data/summary-usage.json

# Optional: where to store admin runtime settings JSON
# ADMIN_SETTINGS_FILE_PATH=./data/admin-settings.json

# Optional: admin username for /admin* commands
# ADMIN_USERNAME=m4xx1k

# Optional: max buffered unsummarized messages per chat
# MESSAGE_BUFFER_MAX_PER_CHAT=500

# Optional: max cached summaries per chat
# SUMMARY_HISTORY_MAX_PER_CHAT=12

# Optional: when to reuse last summary as base context (minutes)
# SUMMARY_REUSE_WINDOW_MINUTES=30

# Optional: per-user /summary cooldown in one chat (seconds)
# SUMMARY_COOLDOWN_SECONDS=20

# Optional: per-user /summary daily limit in one chat
# SUMMARY_DAILY_LIMIT_PER_USER=30

# Optional: OpenAI model for /summary command
# SUMMARY_MODEL=gpt-4o-mini
